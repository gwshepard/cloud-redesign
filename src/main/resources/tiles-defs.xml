<tiles-definitions>

	<definition name=".layout" template="/WEB-INF/common/Layout.jsp">
		<put-attribute name="title" value="Struts2WebApp"/>
		<put-attribute name="header" value="/WEB-INF/common/Header.jsp"/>
		<put-attribute name="navigation" value="/WEB-INF/common/Navigation.jsp"/>
		<put-attribute name="content" value="nothing"/>
		<put-attribute name="footer" value="/WEB-INF/common/Footer.jsp"/>
	</definition>
	
	<definition name="welcome" extends=".layout">
		<put-attribute name="title" value="Struts2WebApp - Welcome"/>
		<put-attribute name="content" value="/WEB-INF/jsp/Welcome.jsp"/>
	</definition>
	   
	<definition name="registration" extends=".layout">
		<put-attribute name="title" value="Struts2WebApp - Registration"/>
		<put-attribute name="content" value="/WEB-INF/jsp/Registration.jsp"/>
	</definition>
	   
	<definition name="registrationUpdate" extends=".layout">
		<put-attribute name="title" value="Struts2WebApp - Registration Update"/>
		<put-attribute name="content" value="/WEB-INF/jsp/RegistrationUpdate.jsp"/>
	</definition>
	  
	<definition name="login" extends=".layout">
		<put-attribute name="title" value="Struts2WebApp - Login"/>
		<put-attribute name="content" value="/WEB-INF/jsp/Login.jsp"/>
	</definition>
   
